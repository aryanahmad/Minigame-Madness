<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MathGame.MathGame">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutGameScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/btnReduce4"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="#FDD835"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="btnReduceMethod"
            android:text="-5"
            android:textColor="#000000"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnReduce2" />

        <Button
            android:id="@+id/btnReduce1"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:background="#1E88E5"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="btnReduceMethod"
            android:text="-7"
            android:textColor="#000000"
            android:textSize="45sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textValue" />

        <Button
            android:id="@+id/btnReduce2"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:background="#8AE432"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="btnReduceMethod"
            android:text="-3"
            android:textColor="#000000"
            android:textSize="45sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textValue" />

        <Button
            android:id="@+id/btnReduce3"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:background="#8D65BB"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:onClick="btnReduceMethod"
            android:text="-2"
            android:textColor="#000000"
            android:textSize="45sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnReduce1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="85dp"
            android:layout_height="79dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/clock" />

        <TextView
            android:id="@+id/textTimeDisplay"
            android:layout_width="90dp"
            android:layout_height="77dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="45dp"
            android:text="30s"
            android:textSize="50sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textValue"
            android:layout_width="205dp"
            android:layout_height="106dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="85dp"
            android:gravity="clip_vertical|center_horizontal"
            android:text="57"
            android:textSize="75sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTimeDisplay" />

        <Button
            android:id="@+id/btnReset"
            android:layout_width="92dp"
            android:layout_height="102dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="85dp"
            android:layout_marginEnd="35dp"
            android:background="#E53935"
            android:onClick="btnReset"
            android:text="Reset"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toEndOf="@+id/textValue"
            app:layout_constraintTop_toBottomOf="@+id/textTimeDisplay" />

        <TextView
            android:id="@+id/textScore"
            android:layout_width="178dp"
            android:layout_height="56dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="17dp"
            android:gravity="center_horizontal"
            android:scrollbarSize="0sp"
            android:text="0 | 0"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textInstructions"
            android:layout_width="281dp"
            android:layout_height="34dp"
            android:layout_marginTop="33dp"
            android:text="Get this to Exactly Zero"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTimeDisplay" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

